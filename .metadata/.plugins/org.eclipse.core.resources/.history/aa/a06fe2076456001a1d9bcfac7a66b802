package heikes_problem1;

import java.security.SecureRandom;
import java.util.Scanner;

public class CAI1 
{
	private static Scanner scanner = new Scanner(System.in);
	
	public static void main(String[] args) 
	{
		quiz();
	}
	
	private static void quiz()	
	{
		SecureRandom RNG = new SecureRandom();
		int numOne = RNG.nextInt(10);
		int numTwo = RNG.nextInt(10);
		
		do 
		{
			askQuestion(numOne, numTwo);
		} 
		while (!isAnswerCorrect(readResponse(), numOne, numTwo));
		
		
	}
	
	private static void askQuestion(int numOne, int numTwo) 
	{
		System.out.println("How much is" + numOne + "times" + numTwo + "?");
	}
	
	private static int readResponse()
	{
		return scanner.nextInt();
	}
	
	private static boolean isAnswerCorrect(int answer, int numOne, int numTwo)
	{
		int response = (numOne * numTwo);
		if (answer == response)
		{
			displayCorrectResponse(response);
			return true;
		}
		else
		{
			displayIncorrectResponse(response);
			return false;
		}
	}
	
	private static void displayCorrectResponse(int response)
	{
		System.out.println("You answered " + response + ", which is incorrect. Please try again!");
	}
	
	private static void displayIncorrectResponse(int response)
	{
		System.out.println("You answered " + response + ", which is correct! Congratulations!");
	}
	
}
